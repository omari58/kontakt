{
  "name": "kontakt",
  "version": "0.1.3",
  "private": true,
  "description": "Self-hosted digital business card platform",
  "scripts": {
    "dev": "pnpm --filter api dev & pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm --filter api build && pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "lint": "pnpm --filter api lint && pnpm --filter web lint",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:generate": "pnpm --filter api db:generate",
    "db:studio": "pnpm --filter api db:studio",
    "keycloak:setup": "./config/keycloak/apply-keycloak-config.sh",
    "infra:up": "docker compose --profile infra up -d",
    "infra:down": "docker compose --profile infra down",
    "infra:logs": "docker compose --profile infra logs -f",
    "prod:build": "docker compose --profile prod build",
    "prod:up": "docker compose --profile prod up -d --build",
    "prod:down": "docker compose --profile prod down",
    "prod:logs": "docker compose --profile prod logs -f"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
